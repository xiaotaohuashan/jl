<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/px20dp"
        android:layout_height="@dimen/px140dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/px100dp"
            android:layout_height="@dimen/px100dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px120dp"
            android:layout_marginRight="@dimen/px80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="主题" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="消息" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="时间" />
    </RelativeLayout>

</layout>